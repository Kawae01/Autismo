    <script>
        // pequeno script para simular envio (substitua/integre conforme desejar)
        const input = document.getElementById('input');
        const send = document.getElementById('send');
        const messages = document.getElementById('messages');

        send.addEventListener('click', () => {
            const text = input.value.trim();
            if(!text) return;
            const row = document.createElement('div');
            row.className = 'row user';
            row.innerHTML = `
                <div class="bubble"><div class="msg-meta" style="text-align:right;"><strong>U</strong></div>${escapeHtml(text)}</div>
                <div class="avatar user">U</div>
            `;
            messages.appendChild(row);
            input.value = '';
            messages.scrollTop = messages.scrollHeight;
            // exemplo de resposta autom√°tico
            setTimeout(()=> {
                const r = document.createElement('div');
                r.className = 'row ia';
                r.innerHTML = `<div class="avatar">IA</div>
                    <div class="bubble">Recebi sua pergunta: "${escapeHtml(text)}". Posso detalhar mais se quiser.</div>`;
                messages.appendChild(r);
                messages.scrollTop = messages.scrollHeight;
            },700);
        });

        function escapeHtml(s){ return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }
    </script>
